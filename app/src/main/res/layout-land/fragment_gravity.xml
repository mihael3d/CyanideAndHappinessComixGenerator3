<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:elevation="100dp"
        app:backgroundTint="@color/colorPrimary"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/round_arrows_bouce_white" />

    <com.jawnnypoo.physicslayout.PhysicsFrameLayout
        android:id="@+id/physics_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:bounds="true"
        app:boundsSize="0dp"
        app:gravityX="0"
        app:gravityY="9.8"
        app:layout_constraintBottom_toBottomOf="parent"


        app:physics="true"
        app:positionIterations="7"
        app:velocityIterations="4"
        tools:layout_editor_absoluteX="0dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cv1"
            android:layout_width="131dp"
            android:layout_height="192dp"

            android:layout_gravity="top"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"


            android:background="@drawable/cardborder"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"

            app:layout_constraintDimensionRatio="604:875"

            app:layout_fixedRotation="true">

            <RelativeLayout
                android:id="@+id/card_1_border_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/card1_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_card_1" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv2"
            android:layout_width="131dp"
            android:layout_height="192dp"
            android:layout_gravity="top"
            android:layout_marginStart="100dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/cardborder"

            app:cardCornerRadius="5dp"
            app:cardElevation="6dp"
            app:layout_constraintDimensionRatio="604:875"
            app:layout_fixedRotation="true"

            >

            <RelativeLayout
                android:id="@+id/relative_layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/card2_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_card_2" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv3"
            android:layout_width="131dp"
            android:layout_height="192dp"
            android:layout_gravity="top"
            android:layout_marginStart="170dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/cardborder"

            app:cardCornerRadius="5dp"
            app:cardElevation="7dp"
            app:layout_constraintDimensionRatio="604:875"

            app:layout_fixedRotation="true">

            <RelativeLayout
                android:id="@+id/relative_layout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/item_card_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_card_3" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv4"
            android:layout_width="131dp"
            android:layout_height="192dp"

            android:layout_marginStart="180dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/cardborder"

            app:cardCornerRadius="5dp"
            app:cardElevation="8dp"
            app:layout_constraintDimensionRatio="604:875"
            app:layout_fixedRotation="true"

            >

            <RelativeLayout
                android:id="@+id/relative_layout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/card4_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_card_4" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv5"
            android:layout_width="131dp"
            android:layout_height="192dp"

            android:layout_marginStart="190dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/cardborder"

            app:cardCornerRadius="5dp"
            app:cardElevation="9dp"
            app:layout_constraintDimensionRatio="604:875"
            app:layout_fixedRotation="true">

            <RelativeLayout
                android:id="@+id/relative_layout5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/card5_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_card_5" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv6"
            android:layout_width="131dp"
            android:layout_height="192dp"

            android:layout_marginStart="340dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/cardborder"

            app:cardCornerRadius="5dp"
            app:cardElevation="10dp"
            app:layout_constraintDimensionRatio="604:875"

            app:layout_fixedRotation="true">

            <RelativeLayout
                android:id="@+id/relative_layout6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/card6_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_card_6" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/cv7"
            android:layout_width="131dp"
            android:layout_height="192dp"

            android:layout_marginStart="300dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/cardborder"

            app:cardCornerRadius="5dp"
            app:cardElevation="10dp"
            app:layout_constraintDimensionRatio="604:875"

            app:layout_fixedRotation="true">

            <RelativeLayout
                android:id="@+id/relative_layout7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/card7_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_card_6" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="49dp"
            android:background="@color/colorPrimary"
            app:layout_bodyType="statik"
            android:clickable="false"/>



        <View
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="-1050dp"
            android:background="@color/colorPrimary"
            app:layout_bodyType="statik"
            android:clickable="false"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:layout_gravity="top"
            android:layout_marginTop="-1050dp"
            android:background="@color/colorPrimary"
            app:layout_bodyType="statik"
            android:clickable="false"/>

        <View
            android:layout_width="1000dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginStart="-1001dp"
            android:background="@color/colorPrimary"
            app:layout_bodyType="statik"
            android:clickable="false"/>
        <View
            android:layout_width="1000dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginEnd="-1001dp"
            android:background="@color/colorPrimary"
            app:layout_bodyType="statik"
            android:clickable="false"/>


    </com.jawnnypoo.physicslayout.PhysicsFrameLayout>

</android.support.constraint.ConstraintLayout>
