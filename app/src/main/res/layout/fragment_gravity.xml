<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:elevation="100dp"
        app:backgroundTint="@color/colorPrimary"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/round_arrows_bouce_white" />

    <com.jawnnypoo.physicslayout.PhysicsFrameLayout
        android:id="@+id/physics_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:bounds="true"
        app:boundsSize="20dp"
        app:gravityX="0"
        app:gravityY="9.8"
        app:layout_constraintBottom_toBottomOf="parent"

        app:physics="true"
        tools:layout_editor_absoluteX="40dp">

        <android.support.v7.widget.CardView
            android:id="@+id/gravity_layout_cv1"

            android:layout_width="120dp"
            android:layout_height="173dp"

            android:layout_gravity="top"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"

            android:background="@drawable/cardborder"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:layout_constraintDimensionRatio="604:875"

            app:layout_fixedRotation="true"
            app:layout_bodyType="dynamic"
            >



            <ImageView
                android:id="@+id/card1_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_card_1"
                />

            <RelativeLayout
                android:id="@+id/card_1_border_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/gravity_layout_cv2"
            android:layout_width="120dp"
            android:layout_height="173dp"
            android:layout_gravity="top"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/cardborder"

            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:layout_constraintDimensionRatio="604:875"
            app:layout_fixedRotation="true"
            app:layout_bodyType="dynamic"
            >


                <ImageView
                    android:id="@+id/card2_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_card_2" />
            <RelativeLayout
            android:id="@+id/card_2_border_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/gravity_layout_cv3"
            android:layout_width="120dp"
            android:layout_height="173dp"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/cardborder"

            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:layout_constraintDimensionRatio="604:875"

            app:layout_fixedRotation="true">


                <ImageView
                    android:id="@+id/card3_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_card_3" />
            <RelativeLayout
            android:id="@+id/card_3_border_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/gravity_layout_cv4"
            android:layout_width="120dp"
            android:layout_height="173dp"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/cardborder"

            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:layout_constraintDimensionRatio="604:875"
            app:layout_fixedRotation="true"

            >



                <ImageView
                    android:id="@+id/card4_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_card_4" />
            <RelativeLayout
            android:id="@+id/card_4_border_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/gravity_layout_cv5"
            android:layout_width="120dp"
            android:layout_height="173dp"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/cardborder"

            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:layout_constraintDimensionRatio="604:875"
            app:layout_fixedRotation="true">



                <ImageView
                    android:id="@+id/card5_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_card_5" />
            <RelativeLayout
            android:id="@+id/card_5_border_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            </RelativeLayout>
        </android.support.v7.widget.CardView>






        <View
            android:id="@+id/card_line"
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:background="@color/colorPrimary"
            android:clickable="false"
            app:layout_bodyType="statik" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="-1050dp"
            android:background="@color/colorPrimary"
            android:clickable="false"
            app:layout_bodyType="kinematic" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:layout_gravity="top"
            android:layout_marginTop="-1050dp"
            android:background="@color/colorPrimary"
            android:clickable="false"
            app:layout_bodyType="kinematic" />

        <View
            android:layout_width="1000dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginStart="-1001dp"
            android:background="@color/colorPrimary"
            android:clickable="false"
            app:layout_bodyType="kinematic" />

        <View
            android:layout_width="1000dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginEnd="-1001dp"
            android:background="@color/colorPrimary"
            android:clickable="false"
            app:layout_bodyType="kinematic" />

    </com.jawnnypoo.physicslayout.PhysicsFrameLayout>

</android.support.constraint.ConstraintLayout>

